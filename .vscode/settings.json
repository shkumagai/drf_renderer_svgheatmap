{
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.extraPaths": [".venv"],
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.mypy_cache/**": true,
        "**/.pdm-build/**": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/Thumbs.db": true,
    },
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/.mypy_cache/**": true,
        "**/.pdm-build/**": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.venv/**": true,
        "**/__pycache__/**": true,
        "**/node_modules/*/**": true,
    }
}
